{{ 'custom-len-style.css' | asset_url | stylesheet_tag }}

{% schema %}
{
  "name": "Ctm Featured Collection",
  "tag": "section",
  "class": "section featured-collection",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_limit",
      "label": "Number of products to show",
      "min": 2,
      "max": 20,
      "step": 1,
      "default": 4
    },
    {
      "type": "checkbox",
      "id": "show_swatches",
      "label": "Show color swatches",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_secondary_image",
      "label": "Enable secondary image on hover",
      "default": false
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Collection"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "label": "Show 'View All' button",
      "default": true
    },
    {
      "type": "url",
      "id": "view_all_url",
      "label": "'View All' link URL",
      "default": "/collections/all"
    },
    {
      "type": "text",
      "id": "view_all_label",
      "label": "'View All' button text",
      "default": "View All"
    },
    {
      "type": "range",
      "id": "section_padding_top",
      "label": "Section padding top (px)",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 40
    },
    {
      "type": "range",
      "id": "section_padding_bottom",
      "label": "Section padding bottom (px)",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 40
    },
    {
      "type": "select",
      "id": "columns",
      "label": "Grid columns",
      "default": "4",
      "options": [
        { "label": "3 columns", "value": "3" },
        { "label": "4 columns", "value": "4" },
        { "label": "5 columns", "value": "5" },
        { "label": "6 columns", "value": "6" },
        { "label": "7 columns", "value": "7" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Featured Collection"
    }
  ]
}
{% endschema %}

{% if section.settings.collection %}
  <div
    class="page-width section-spacing"
    style="padding-top: {{ section.settings.section_padding_top }}px; padding-bottom: {{ section.settings.section_padding_bottom }}px;"
  >
    <h2 class="h2 text-center">{{ section.settings.heading | escape }}</h2>
    {% assign all_products = section.settings.collection.products %}
    {% assign product_count = all_products.size %}
    {% assign offset = 'now' | date: '%S' | plus: 0 %}
    {% assign random_offset = offset | modulo: product_count %}
    {% assign limit = section.settings.products_limit %}

    <div class="grid grid--{{ section.settings.columns }}-col-desktop grid--2-col-tablet-down">
      {% for product in all_products offset: random_offset limit: limit %}
        {% if product.handle != 'hidden-gem-1' %}
          <div class="grid__item">
            {% render 'card-product',
              card_product: product,
              show_secondary_image: section.settings.show_secondary_image,
              section_id: section.id,
              quick_add: 'standard',
              show_vendor: false
            %}
          </div>
        {% endif %}
      {% endfor %}
    </div>

    {% if section.settings.show_view_all and section.settings.view_all_url != blank %}
      <div
        class="center collection__view-all{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
        style="text-align: right;"
      >
        <a
          href="{{ section.settings.view_all_url }}"
          class="button"
          aria-label="{{ section.settings.view_all_label | escape }}"
        >
          {{ section.settings.view_all_label }}
        </a>
      </div>
    {% endif %}
  </div>
{% else %}
  <div class="page-width section-spacing text-center">
    <p>No collection selected.</p>
  </div>
{% endif %}
